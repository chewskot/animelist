@model IEnumerable<C2.Models.Genre>

<h2>Genres</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Genre</a>
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var genre in Model)
    {
        <tr>
            <td>@genre.Name</td>
            <td>@genre.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
